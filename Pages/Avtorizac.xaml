<Page x:Class="UchetProsmotrennichFilmov.Pages.Avtorizac"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UchetProsmotrennichFilmov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtorizac">

    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1">
            <Label Content="Добро Пожаловать!" FontSize="24" FontWeight="Bold"></Label>
            <Label Content="Авторизируйтесь:" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
            <StackPanel>
                <TextBlock Text="Введите ваш логин (Почта): "></TextBlock>
                <TextBox></TextBox>
            </StackPanel>
            <StackPanel Margin="0,0,0,5">
                <TextBlock Text="Введите ваш пароль: "></TextBlock>
                <PasswordBox></PasswordBox>
            </StackPanel>
            <Button Content="Войти"></Button>
            <TextBlock Text="Или" HorizontalAlignment="Center"></TextBlock>
            <Button Content="Зарегистрироваться"></Button>
        </StackPanel>

    </Grid>
</Page>
