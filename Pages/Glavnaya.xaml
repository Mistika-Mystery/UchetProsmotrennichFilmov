<Window x:Name="Glavnoe" x:Class="UchetProsmotrennichFilmov.Pages.Glavnaya"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UchetProsmotrennichFilmov.Pages"
        mc:Ignorable="d">
    <Window.Resources>
        <Color x:Key="GradientStopColor1">White</Color>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF276E8B" Offset="0.998"/>
                <GradientStop Color="#FFB9EAFF" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image x:Name="ImgLogo" Grid.Column="1" Source="/Image/video_icon.png" ToolTip="На Главную" HorizontalAlignment="Center" VerticalAlignment="Center" Height="70" Width="70" Margin="0,0,100,0"/>
            <StackPanel VerticalAlignment="Center">
                <Label x:Name="TxtLogo" Grid.Column="1" Content="Учет Просмотренных Фильмов" FontSize="20" FontWeight="Black" FontFamily="Gill Sans Nova Ultra Bold" ToolTip="На Главную"/>
                 <Label Grid.Column="1" Content="Ваш Персональный Помошник В Мире Кино" FontFamily="Gill Sans Nova" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
            </StackPanel>
         <Image x:Name="ImgBack" Source="/Image/exit.png" Cursor="Hand" Width="35" HorizontalAlignment="Right" ToolTip="Сменить пользователя" MouseLeftButtonDown="ImgBack_MouseLeftButtonDown" Margin="100,0,0,0"/>
            
        </StackPanel>
        <TabControl Grid.Row="1" Grid.Column="1">
            <TabItem x:Name="TCKatalog" Header=" Каталог ">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        
                    </Grid.ColumnDefinitions>

                    <DataGrid x:Name="KatalogGrid" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="3*"/>
                                            <!--<ColumnDefinition Width="*"/>-->
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Image  
                                    Source="{Binding ImageFilm}" 
                                    Grid.Column="0" 
                                    Grid.Row="0" 
                                    Grid.RowSpan="5"/>
                                        <StackPanel 
                                    Orientation="Horizontal" 
                                    Grid.Row="0" 
                                    Grid.Column="1">
                                            <TextBlock Text="Имя: "/>
                                            <TextBlock Text="{Binding NameFilm}" FontWeight="Bold"/>

                                        </StackPanel>
                                        <StackPanel 
                                    Orientation="Horizontal" 
                                    Grid.Row="1" 
                                    Grid.Column="1">
                                            <TextBlock Text="Страна: "/>
                                            <TextBlock Text="{Binding Strany.NameStrana}" FontWeight="Bold"/>

                                        </StackPanel>
                                        <StackPanel 
                                    Orientation="Horizontal" 
                                    Grid.Row="2" 
                                    Grid.Column="1">
                                            <TextBlock Text="год: "/>
                                            <TextBlock Text="{Binding GodFilm }" FontWeight="Bold"/>

                                        </StackPanel>
                                        <StackPanel 
                                    Orientation="Horizontal" 
                                    Grid.Row="3" 
                                    Grid.Column="1">
                                            <TextBlock Text="Продолжительность: "/>
                                            <TextBlock Text="{Binding TimeFilm}" FontWeight="Bold"/>
                                            <TextBlock Text=" мин."/>
                                        </StackPanel>
                                        <StackPanel 
                                    Orientation="Horizontal" 
                                    Grid.Row="4" 
                                    Grid.Column="1">
                                            <TextBlock Text="Режиссер: "/>
                                            <TextBlock Text="{Binding Rezhisers.FIO}" FontWeight="Bold"/>

                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                    <StackPanel Grid.Column="1" Panel.ZIndex="2">
                        <TextBlock Text="Поиск по названию и описанию"/>
                        <TextBox x:Name="TBoxSearch" ></TextBox>
                        <Label/>
                        <TextBlock Text="Поиск по типу"/>
                        <ComboBox x:Name="CBTip">
                            <ComboBoxItem Content="Полнометражный"/>
                            <ComboBoxItem Content="Сериал"/>
                        </ComboBox>
                        <Label/>
                        
                        <TextBlock Text="Поиск по жанру"/>
                        <ComboBox x:Name="CBJanr">
                            <ComboBoxItem Content="Ужасы"/>
                            <ComboBoxItem Content="Драма"/>
                            <ComboBoxItem Content="Фентези"/>
                            <ComboBoxItem Content="Приключения"/>
                            <ComboBoxItem Content="Семейный"/>
                            <ComboBoxItem Content="Комедия"/>
                            <ComboBoxItem Content="Триллер"/>
                            <ComboBoxItem Content="Детектив"/>
                            <ComboBoxItem Content="Музыкальный"/>
                            <ComboBoxItem Content="Документальный"/>
                            <ComboBoxItem Content="Исторический"/>
                            <ComboBoxItem Content="Боевик"/>
                            <ComboBoxItem Content="Военный"/>
                            <ComboBoxItem Content="Фантастика"/>
                            <ComboBoxItem Content="Мелодрама"/>
                            <ComboBoxItem Content="Мультфильм"/>
                            <ComboBoxItem Content="Аниме"/>
                            <ComboBoxItem Content="Мистика"/>
                            <ComboBoxItem Content="Вестерн"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header=" Избранное " />
            <TabItem Header=" Просмотренные " />
            <TabItem Header=" Хочу Посмотреть " />
            <TabItem Header=" Режиссеры " />
            <TabItem Header=" Актеры " />
        </TabControl>
    </Grid>
</Window>
